{
    "ci": {
        "collect": {
            "numberOfRuns": 1,
            "settings": {
                "chromeFlags": [
                    "--disable-gpu",
                    "--no-sandbox",
                    "--no-zygote"
                ],
                "configPath": "./lighthouse-config.js"
            }
        },
        "assert": {
            "assertions": {
                "first-contentful-paint": [
                    "error",
                    {
                        "minScore": 0.6
                    }
                ]
            }
        }
    }
}